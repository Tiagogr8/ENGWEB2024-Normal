extends layout 

block content 
    header.w3-container.w3-teal
        h1  #{contrato._id}
    .w3-container 
        ul.w3-ul.w3-card-4(style="width:50%")
            li 
                b Id: #{contrato._id}
            li 
                b Número Anuncio: #{contrato.nAnuncio}
            li
                b Tipo Procedimento: #{contrato.tipoprocedimento}
            li
                b Objecto Contrato: #{contrato.objectoContrato}
            li
                b Data Publicação: #{contrato.dataPublicacao}
            li
                b Data Celebração Contrato: #{contrato.dataCelebracaoContrato}
            li
                b Preço Contratual: #{contrato.precoContratual}
            li
                b Prazo Execução: #{contrato.prazoExecucao}
            li
                b NIPC Entidade Comunicante: #{contrato.NIPC_entidade_comunicante}
            li
                b Entidade Comunicante: #{contrato.entidade_comunicante}
            li
                b Fundamentação: #{contrato.fundamentacao}

    footer.w3-container.w3-teal 
        address 
            span Generated by Tiago Rodrigues in #{date} - [
            a(href="/") Voltar 
            span ]
