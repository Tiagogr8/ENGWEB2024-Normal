extends layout 

block content 
    header.w3-container.w3-teal
        h1  #{id_Entidade} - #{nome}
    .w3-container
        table.w3-table-all
            tr
                th Id_Contrato
                th Objecto Contrato
                th Data Celebracao Contrato
                th Preco Contratual

            each contrato in lContratos 
                tr 
                    td
                        a(href="/" + contrato._id)= contrato._id
                    td= contrato.objectoContrato
                    td= contrato.dataCelebracaoContrato
                    td= contrato.precoContratual

    .w3-container 
        ul.w3-ul.w3-card-4(style="width:50%")
            li 
                b Pre√ßo total: #{total}
        
                
    footer.w3-container.w3-teal 
        address 
            span Generated by Tiago Rodrigues - [
            a(href="/") Voltar 
            span ]
